<AuLabel class="{{if this.errors " au-c-label--error"}}" for={{this.inputFor}}>
  {{@field.label}}
  {{#if this.isRequired}}
  <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
<table class="data-table data-table--zebra data-table--tight au-u-margin-top-small">
  <thead>
    <tr>
      <th>
        Omschrijving actie
      </th>
      <th>
        Kost van één eenheid
      </th>
      <th>
        Ingezet bedrag per actie (in euro)
      </th>
      <th>
        Terruggave via trekkingsrecht (50%)
      </th>
      <th>
        Te realiseren eenheden
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each this.entries as |entry index|}}
        <tr>
          <td>
            {{entry.actionDescription.value}}
          </td>
          <td>
            {{convert-to-currency entry.costPerUnit.value}}
          </td>
          <td>
            <AuLabel for="input-amount-per-action-{{index}}" class="au-u-hidden-visually">
              Ingezet bedrag per actie (in euro)
            </AuLabel>
            <AuInput type="number" lang="nl-BE" id="input-amount-per-action-{{index}}" @width={{"block"}} @value={{entry.amountPerAction.value}}
              class={{if entry.amountPerAction.errors "au-c-input--error"}}
              {{on "blur" (fn this.updateAmountPerActionValue entry)}}
            />
            {{#each entry.amountPerAction.errors as |error|}}
              <AuHelpText @error={{"error"}}>{{error.message}}</AuHelpText>
            {{/each}}
          </td>
          <td>
            {{convert-to-currency entry.restitution.value}}
          </td>
          <td>
            {{entry.toRealiseUnits.value}}
          </td>
        </tr>
    {{/each}}
  </tbody>
</table>

{{yield}}