<td>
  <AuInput
    disabled={{@disabled}}
    type="number"
    lang="nl-BE"
    @width={{"block"}}
    @value={{this.kilometers}}
    class={{if this.errors "au-c-input--error"}}
    {{on "blur" (fn this.update)}}
  />
  {{#each this.errors as |error|}}
    <AuHelpText @error={{"error"}}>{{error.message}}</AuHelpText>
  {{/each}}
</td>