          {{/each}}
        </td>

        {{!-- double --}}
        <td>
          <AuLabel for="suggestion-lane-double-{{index}}" class="au-u-hidden-visually">
            Fietssugestiestroken - Dubbelrichting
          </AuLabel>
          <AuInput id="suggestion-lane-double-{{index}}" @width={{"block"}} @value={{entry.cost.value}}
            type="number"
            class={{if entry.cost.errors "au-c-input--error"}}
            {{on "blur" (fn this.updateCost entry)}}
          />
