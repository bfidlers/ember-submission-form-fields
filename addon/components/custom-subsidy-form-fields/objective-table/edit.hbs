            {{on "blur" (fn this.updateCost entry)}}
          />
          {{#each entry.cost.errors as |error|}}
            <AuHelpText @error={{"error"}}>{{error.message}}</AuHelpText>
          {{/each}}
        </td>

        {{!-- Fietssugestiestroken --}}
        {{!-- single --}}
        <td>
          <AuLabel for="bike-suggestion-lane-single-{{index}}" class="au-u-hidden-visually">
            Fietssugestiestroken - Enkelrichting
          </AuLabel>
          <AuInput id="bike-suggestion-lane-single-{{index}}" @width={{"block"}} @value={{entry.cost.value}}
            type="number"
            class={{if entry.cost.errors "au-c-input--error"}}
            {{on "blur" (fn this.updateCost entry)}}
          />
          {{#each entry.cost.errors as |error|}}
