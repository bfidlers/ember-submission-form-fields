          {{/each}}
        </td>

        {{!-- Aan- en vrijliggend fietspad langs beide kanten van de weg --}}
        {{!-- single --}}
        <td>
          <AuLabel for="both-sides-single-{{index}}" class="au-u-hidden-visually">
            Aan- en vrijliggend fietspad langs beide kanten van de weg - Enkelrichting
          </AuLabel>
          <AuInput id="both-sides-single-{{index}}" @width={{"block"}} @value={{entry.cost.value}}
            type="number"
            class={{if entry.cost.errors "au-c-input--error"}}
            {{on "blur" (fn this.updateCost entry)}}
          />
          {{#each entry.cost.errors as |error|}}
            <AuHelpText @error={{"error"}}>{{error.message}}</AuHelpText>
          {{/each}}
        </td>
        {{!-- double --}}
        <td>
          <AuLabel for="both-sides-double-{{index}}" class="au-u-hidden-visually">
            Aan- en vrijliggend fietspad langs beide kanten van de weg - Dubbelrichting
          </AuLabel>
          <AuInput id="both-sides-double-{{index}}" @width={{"block"}} @value={{entry.cost.value}}
            type="number"
            class={{if entry.cost.errors "au-c-input--error"}}
            {{on "blur" (fn this.updateCost entry)}}
          />
          {{#each entry.cost.errors as |error|}}
            <AuHelpText @error={{"error"}}>{{error.message}}</AuHelpText>
          {{/each}}
        </td>

        {{!-- Fietsweg --}}
        {{!-- single --}}
        <td>
          <AuLabel for="bike-lane-single-{{index}}" class="au-u-hidden-visually">
             Fietsweg - Enkelrichting
          </AuLabel>
          <AuInput id="bike-lane-single-{{index}}" @width={{"block"}} @value={{entry.cost.value}}
