<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
<ul id={{this.inputId}}>
  {{#each this.options as |option|}}
    <li>
      <label for="{{@field.uri}}/<{{option.value}}>" class="au-c-control au-c-control--radio">
        <input type="radio"
               class="au-c-control__input"
               id="{{@field.uri}}/<{{option.value}}>"
               name="{{@field.uri}}"
               checked={{if (eq this.value option.value) true false}}
               onclick={{fn this.updateValue option}}>
        <span class="au-c-control__indicator"></span>
        {{option.label}}
      </label>
    </li>
  {{/each}}
</ul>

{{#each this.errors as |error|}}
  <AuHelpText @error={{"error"}}>{{error.resultMessage}}</AuHelpText>
{{/each}}

