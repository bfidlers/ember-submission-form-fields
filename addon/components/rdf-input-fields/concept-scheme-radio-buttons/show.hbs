<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>

{{#each this.options as |option|}}
  <label class="radio">
    <input type="radio" class="radio__toggle" disabled={{true}} checked={{if (eq option.label option.selected.label) "true" "false"}} name={{@field.uri}} value={{option}}>
    <span></span>
    {{option.label}}
  </label>
{{/each}}


