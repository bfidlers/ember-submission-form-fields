<AuLabel for={{this.id}}>{{@field.label}}</AuLabel>
<AuButtonGroup @inline={{true}}>
  <AuInput id={{this.id}} @value={{this.value}} @disabled={{true}} />
  <AuButton
    @skin="secondary"
    @icon="document"
    @hideText={{true}}
    {{on "click" this.copy}}
  >Kopieren</AuButton>
</AuButtonGroup>