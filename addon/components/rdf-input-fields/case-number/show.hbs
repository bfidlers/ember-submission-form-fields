<AuLabel>{{@field.label}}</AuLabel>
<AuButtonGroup @inline={{true}}>
  <AuInput id="{{this.id}}"
           @value={{this.value}}
           disabled="disabled"/>
  <AuButton @skin="secondary"
            @icon="document"
            @hideText={{true}}
            onclick={{this.copy}}>Kopieren</AuButton>
</AuButtonGroup>