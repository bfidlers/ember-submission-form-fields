<AuLabel>{{@field.label}}</AuLabel>
{{#if this.showAlert}}
  <AuAlert @alertIcon="alert-triangle"
           @alertTitle="Oeps, dit is een beetje gênant!"
           @alertskin={{"warning"}}
           @alertsize={{"small"}}
           @closable={{true}}>
    <AuHelpText class="au-u-margin-none">
      Onderstaande veld zou automatisch ingevuld moeten worden door één van onze processen,
      <br>maar het lijkt dat deze onze vraag niet heeft kunnen beantwoorden.
      <br><strong>Probeer de pagina eens te herladen.</strong>
    </AuHelpText>
  </AuAlert>
{{/if}}
<AuButtonGroup @inline={{true}}>
  <AuInput id="{{this.id}}"
           @value={{this.value}}
           disabled="disabled"/>
  <AuButton @skin="secondary"
            @icon="document"
            @hideText={{true}}
            onclick={{this.copy}}>Kopieren</AuButton>
</AuButtonGroup>