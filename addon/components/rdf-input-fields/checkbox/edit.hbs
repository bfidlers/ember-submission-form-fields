<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
<AuControlCheckbox @identifier={{this.inputId}}
                   @label={{@field.label}}
                   checked={{this.value}}
                   onclick={{this.updateValue}}/>
{{#each this.errors as |error|}}
  <AuHelpText @error={{"error"}}>{{error.resultMessage}}</AuHelpText>
{{/each}}