<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
<PowerSelect
  data-test-field-uri={{@field.uri.value}}
  @triggerId={{this.inputId}}
  @disabled={{true}}
  @selected={{this.selected}}
  @options={{this.options}}
  @onChange={{noop}}
  as |concept|>
  {{concept.label}}
</PowerSelect>
