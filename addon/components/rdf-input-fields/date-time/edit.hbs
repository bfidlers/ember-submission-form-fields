<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
<div class="au-o-grid au-o-grid--flush">
  <div class="au-o-grid__item au-u-2-4">
    <div class="au-c-date-picker-container {{if this.errors "au-c-date-picker-container--error"}}">
      <div class="datepicker">
      <WuDatepickerInput 
              data-test-field-uri={{@field.uri}}
              id="{{this.inputId}}"
              class="au-c-input au-c-input--block"
              @dateFormat="DD.MM.YYYY"
              @onChange={{this.updateValue}}
              @rawValue={{this.value}}
      />
      </div>
    </div>
    <AuHelpText class="au-u-margin-bottom-tiny {{if this.errors "au-c-help-text--error"}}">Datum formaat: DD.MM.JJJJ
    </AuHelpText>
    {{#each this.errors as |error|}}
      <AuHelpText @error={{"error"}}>{{error.resultMessage}}</AuHelpText>
    {{/each}}

    {{!--  Temporally disabled hour & min input fields
