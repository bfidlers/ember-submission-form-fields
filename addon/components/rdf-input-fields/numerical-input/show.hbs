<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if this.isRequired}}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
<AuInput
  type="number"
  id="{{this.inputId}}"
  lang="nl-BE"
  disabled={{true}}
  @width={{"block"}}
  @value={{this.value}}
/>