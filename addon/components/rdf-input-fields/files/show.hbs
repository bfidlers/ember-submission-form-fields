<AuLabel class="{{if this.errors "au-c-label--error"}}" for={{this.inputId}}>
  {{@field.label}}
  {{#if (and this.isRequired this.containsRemoteUrls)}}
    <AuPill>Enkel indien geen links</AuPill>
  {{else if this.isRequired }}
    <AuPill>Verplicht</AuPill>
  {{/if}}
</AuLabel>
{{#each this.files as |file|}}
  <VoMuFileCard data-test-field-uri={{@field.uri.value}} id="{{this.inputId}}" @file={{file}} @active={{false}}/>
{{/each}}

{{#unless this.files}}
  <AuHelpText>Er werden geen bestanden toegevoegd.</AuHelpText>
{{/unless}}
